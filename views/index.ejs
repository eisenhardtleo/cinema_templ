<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Home</title>
    <%- include("includes/head") %>

<body>
    <%- include("includes/header") %>
        <main id="main">
            <section id="hero-gallery">
                <div id="hero-gallery-inner">
                    <div id="slideshow-container">
                        <div id="slideshow">
                            <% slides.forEach(slide=> { %>
                                <div class="slide active" style="background-image: url( '<%= slide.path %>' )">
                                    <div class="slide-content">
                                        <div class="dt w-full h-full">
                                            <div class="dtc va-m">
                                                <h2 class="slide-title">
                                                    <%= slide.name %>
                                                </h2>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                        </div>
                        <div id="hero-gallery-dots">
                            <div class="dot active" data-slide="0"></div>
                            <div class="dot" data-slide="1"></div>
                            <div class="dot" data-slide="2"></div>
                            <div class="dot" data-slide="3"></div>
                            <div class="dot" data-slide="4"></div>
                            <div class="dot" data-slide="5"></div>
                            <div class="dot" data-slide="6"></div>
                            <div class="dot" data-slide="7"></div>
                            <div class="dot" data-slide="8"></div>
                        </div>
                    </div>
                </div>
            </section>

            <section id="movies" class="padded-section">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12 text-center">
                            <h2 class="section-title">
                                FILMS
                            </h2>
                        </div>
                    </div>

                    <div id="movies-wall" class="row">
                        <% for (const movie of movies) { %>
                            <article
                                class="single-movie-block col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-0 col-lg-3">
                                <div class="single-movie-poster"
                                    style="background-image: url('<%= movie.pathImage %>');"></div>
                                <div class="single-movie-data text-center">
                                    <h4>
                                        <%= movie.name %>
                                    </h4>
                                    <a href="/<%= movie.id %>" class="btn btn-mv-blue btn-mv single-movie-info-cta">
                                        INFO FILM
                                    </a>
                                </div>
                            </article>
                            <% } %>
                    </div>
                </div>
            </section>
            
            <section id="book-now" class="padded-section">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-12 text-center">
                            <div class="section-title-opaque-container">
                                <h2 class="section-title text-uppercase">
                                    prenotazione
                                </h2>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="book-now-form-container text-center">
                                <div class="row">
                                    <div class="col-md-6 hidden-xs hidden-sm">
                                        <img src="assets/images/sala.png" alt="">
                                    </div>
                                    <div class="col-xs-12 col-md-6">
                                        <div id="book-now-form">

                                            <div class="row book-now-form-row">
                                                <div class="col-xs-1">
                                                    <i class="fas fa-search"></i>
                                                </div>
                                                <div class="col-xs-11">
                                                    <div class="form-group">
                                                        <select id="movie_id" class="form-control" name="movie_id">
                                                            <option value="">Scegli un film</option>
                                                            <% for (let i = 0; i < movies.length; i++) { %>
                                                                <% const movie = movies[i]; %>
                                                                <option value="<%= movie.id %>"><%= movie.name %></option>                                                                
                                                            <% } %>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row book-now-form-row">
                                                <div class="col-xs-1">
                                                    <i class="fas fa-search"></i>
                                                </div>
                                                <div class="col-xs-11">
                                                    <div class="form-group">
                                                        <input class="form-control" type="datetime-local" name="movie_datetime" id="movie_datetime">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row book-now-form-row">
                                                <div class="col-xs-1">
                                                    <i class="fas fa-search"></i>
                                                </div>
                                                <div class="col-xs-11">
                                                    <div class="form-group">
                                                        <select class="form-control" name="movie_time" id="movie_time">
                                                            <option value="">Scegli un orario</option>
                                                            <option value="1">18.00</option>
                                                            <option value="2">20.30</option>
                                                            <option value="3">22.30</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>

                                            <div id="search" class="btn btn-mv-purple btn-mv">cerca</div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <section>
                <div id="map" style="background-image: url('assets/images/mappa.png');"></div>
            </section>
        </main>
        <%- include("includes/footer") %>


        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <script src="assets/js/vendors/bootstrap3/bootstrap.min.js"></script>
        <script src="assets/js/scripts.js"></script>
</body>

</html>